<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_label" />

    <ListPreference
        android:defaultValue="@string/pref_temp_units_metric"
        android:dependency="@string/pref_location_key"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_values"
        android:key="@string/pref_tempunits_key"
        android:title="@string/pref_temp_label" />

</PreferenceScreen>